<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourCV"
    android:background="#363636">

    <TextView
        android:id="@+id/center"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="YourCV"
        android:textAlignment="center"
        android:textColor="#99d8d0"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/n1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:text="Name :"
        android:textSize="30sp"
        android:textColor="#b7efcd"/>

    <TextView
        android:id="@+id/EN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/center"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="87dp"
        android:layout_toEndOf="@+id/n1"
        android:ems="10"
        android:text="Name"
        android:textColor="#ffbcbc"/>

    <TextView
        android:id="@+id/a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/n1"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="80dp"
        android:text="Age :"
        android:textSize="30sp"
        android:textColor="#b7efcd"/>
    <TextView
        android:id="@+id/EA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/a1"
        android:layout_alignTop="@+id/EN"
        android:ems="10"
        android:text="Age"
        android:textColor="#ffbcbc"/>
    <TextView
        android:id="@+id/j1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/a1"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="80dp"
        android:text="Job :"
        android:textSize="30sp"
        android:textColor="#b7efcd"/>
    <TextView
        android:id="@+id/EJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/j1"
        android:layout_alignTop="@+id/EA"
        android:ems="10"
        android:text="Job"
        android:textColor="#ffbcbc"/>


    <TextView
        android:id="@+id/e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/j1"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="82dp"
        android:text="Email :"
        android:textSize="30sp"
        android:textColor="#b7efcd"/>

    <TextView
        android:id="@+id/EE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/e1"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/e1"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email"
        android:textColor="#ffbcbc"
        android:autoLink="email"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/e1"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="80dp"
        android:text="Phone :"
        android:textSize="30sp"
        android:textColor="#b7efcd"/>
    <TextView
        android:id="@+id/EP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/p1"
        android:layout_alignTop="@+id/EE"
        android:text="Phone"
        android:textColor="#ffbcbc"
        android:autoLink="phone"
        android:clickable="true"

        />

</RelativeLayout>